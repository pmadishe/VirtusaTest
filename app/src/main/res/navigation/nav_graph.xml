<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.virtusatest.ui.FirstFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.example.virtusatest.ui.DetailFragment"
        tools:layout="@layout/fragment_detail">

        <action
            android:id="@+id/action_DetailFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />


    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.virtusatest.ui.SecondFragment"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>


</navigation>